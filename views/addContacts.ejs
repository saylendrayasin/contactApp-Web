<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Tambah Contact</h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(err => { %>
          <li><%= err.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form
        method="post"
        action="/contact"
        class="row g-3 mt-3 border px-2 pb-3 rounded-4"
      >
        <div class="col-12">
          <label for="Nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            placeholder="Nama Lengkap"
            id="Nama"
            name="Nama"
            required
          />
        </div>

        <div class="col-12">
          <label for="NoHP" class="form-label">Nomor HP</label>
          <input
            type="text"
            class="form-control"
            id="NoHP"
            placeholder="ID-id"
            name="NoHP"
            required
          />
        </div>
        <div class="col-12">
          <label for="Email" class="form-label">Email</label>
          <input
            type="Email"
            class="form-control"
            id="Email"
            placeholder="example@gmail.com"
            name="Email"
            required
          />
        </div>
        <div class="col-12">
          <button class="btn btn-primary" type="submit">
            Tambah Data Contact
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
